{
  "extends": "../../tsconfig.base.json",

  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "incremental": true,
    "tsBuildInfoFile": ".tsbuildinfo",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "noUnusedLocals": false
  },

  "exclude": ["node_modules", "dist"]
}
